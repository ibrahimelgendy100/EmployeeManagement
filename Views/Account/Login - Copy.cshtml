@model LoginViewModel

@{
	ViewBag.Title = "Login";
}

@{
	if (!(ViewBag.Error is null))
	{
		<h3 class="alert alert-danger">
			@ViewBag.Error
		</h3>
	}
}


<div class="accordion-header text-center">
	<h1>Login</h1>
</div>
<div class="row">
	<div class="m-4">
		<form class="form-control g-3 align-items-center" method="post">
			<div class="row mb-3">
				<label asp-for="Email" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="Email" class="form-control" placeholder="Email">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label asp-for="Password" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="Password" class="form-control" placeholder="Password">
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>
			<div class="row mt-3">
				<div class="form-check">
					<label asp-for="RememberMe" class="form-check-label ms-lg-3">
						<input asp-for="RememberMe" type="checkbox" class="form-check-input"  />
						@Html.DisplayNameFor(m => m.RememberMe)
					</label>
				</div>
			</div>
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="row">
				<div class="col-sm-10">
					<button type="submit" class="btn btn-primary">Login</button>
				</div>
			</div>
			<div>
			</div>
		</form>
	</div>
</div>


